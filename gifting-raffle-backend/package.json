{
  "name": "gifting-raffle-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node ./src/index.js",
    "copy": "mkdir -p ../build && cp -aR ./build/ ../build/ && cp ./.env.dist ../build/.env.dist",
    "release": "npm run build && npm run copy",
    "build": "tsc --skipLibCheck",
    "watch": "docker-compose up builder",
    "docker-build": "./docker/build.sh",
    "docker-build-prod": "docker build -t boilerplate-api:latest -f ./docker/prod/Dockerfile .",
    "api": "docker-compose up boilerplate_api",
    "down": "docker-compose down -v",
    "format": "docker-compose run --rm js ./node_modules/.bin/prettier --write \"**/**/*.ts\" \"!**/**/*.d.ts\"",
    "lint": "docker-compose run --rm js ./node_modules/.bin/eslint -c ./eslint.json --ext .ts ./",
    "lint-fix": "docker-compose run --rm js ./node_modules/.bin/eslint -c ./eslint.json --ext .ts --fix ./",
    "integration-tests": "cd build && node ../node_modules/.bin/mocha \"tests/**/*.spec.js\" --file=\"tests/bootstrap.js\" --exit",
    "services-units": "cd build && ls -la && node ../node_modules/.bin/mocha \"src/**/*.spec.js\"",
    "integration": "docker-compose run --rm js npm run integration-tests",
    "units": "docker-compose run --rm js npm run services-units",
    "shell": "docker-compose run --rm js sh",
    "generate-migration": "docker-compose run --rm js ./node_modules/.bin/typeorm migration:generate -f ./build/config/db.static -n",
    "run-migrations": "docker-compose run --rm js ./node_modules/.bin/typeorm migration:run -f ./build/config/db.static",
    "revert-migration": "docker-compose run --rm js ./node_modules/.bin/typeorm migration:revert -f ./build/config/db.static",
    "create-migration": "docker-compose run --rm js ./node_modules/.bin/typeorm migration:create -f ./build/config/db.static -n",
    "plop": "plop"
  },
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "keywords": [],
  "author": "",
  "dependencies": {
    "awilix": "^4.2.2",
    "celebrate": "^10.1.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.1.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^4.7.0",
    "pg": "^7.12.1",
    "supertest": "^4.0.2",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2",
    "typeorm": "^0.2.20",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/chai-as-promised": "^7.1.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv-safe": "^8.1.0",
    "@types/express": "^4.17.2",
    "@types/express-serve-static-core": "^4.16.11",
    "@types/helmet": "0.0.45",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.7",
    "@types/nodemailer": "^4.6.8",
    "@types/supertest": "^2.0.8",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.0",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^3.0.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-typescript": "^6.3.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-unicorn": "^12.1.0",
    "mocha": "^10.2.0",
    "plop": "^2.5.3",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  }
}
